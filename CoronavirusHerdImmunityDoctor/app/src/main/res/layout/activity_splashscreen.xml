<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">

    <!-- illustration_bluetooth -->
    <ImageView
        style="@style/background_image"
        android:src="@drawable/ic_illustration_bluetooth" />

    <TextView
        style="@style/splashscreen_title"
        android:layout_width="wrap_content"
        android:id="@+id/splashscreen_title" />

    <TextView
        android:id="@+id/splashscreen_subtitle"
        style="@style/splashscreen_subtitle"
        android:text="@string/splash_subtitle"/>


</RelativeLayout>
