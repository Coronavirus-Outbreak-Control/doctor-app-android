<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <!-- Title -->
    <TextView
        style="@style/intro_title"
        android:layout_marginTop="60dp"
        android:text="@string/diagnosis_title" />


    <Button
        style="@style/button_primary"
        android:id="@+id/bt_confirm_covid"
        android:text="@string/bt_confirm_covid"
        android:background="@drawable/ic_rectangle_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/bt_suspect_covid"
        style="@style/button_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_rectangle_orange"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        android:text="@string/bt_suspect_covid" />

    <Button
        style="@style/button_primary"
        android:id="@+id/bt_recover_covid"
        android:text="@string/bt_recover_covid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_rectangle_green"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        android:layout_gravity="center_vertical" />

    <!-- BACK BUTTON -->
    <Button
        android:id="@+id/bt_back"
        android:layout_width="112dp"
        android:layout_height="107dp"
        android:background="@drawable/ic_back_button"
        android:gravity="bottom" />

</LinearLayout>