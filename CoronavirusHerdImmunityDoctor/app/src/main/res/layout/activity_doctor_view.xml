<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/intro_title"
        android:id="@+id/tv_changestatus"
        android:layout_marginTop="60dp"
        android:text="@string/main_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/intro_subtitle"
        android:id="@+id/subtitle"
        android:text="@string/tv_change_patient_status"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_changestatus"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/tv_changestatus"
        app:layout_constraintTop_toBottomOf="@+id/tv_changestatus" />


    <Button
        style="@style/button_primary"
        android:id="@+id/bt_scan_qrcode"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/side_margin"
        android:background="@drawable/ic_asset_1"
        android:text="@string/bt_scan_qrcode"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:gravity="center|top"
        android:textSize="18sp"
        android:textColor="@color/colorTextDark"
        app:layout_constraintEnd_toEndOf="@+id/subtitle"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/subtitle"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />


    <Button
        style="@style/button_primary"
        android:id="@+id/bt_invite_doc"
        android:text="@string/bt_invite_doc"
        android:layout_marginTop="@dimen/side_margin"
        app:layout_constraintEnd_toEndOf="@+id/bt_scan_qrcode"
        app:layout_constraintStart_toStartOf="@+id/bt_scan_qrcode"
        app:layout_constraintTop_toBottomOf="@+id/bt_scan_qrcode" />

</androidx.constraintlayout.widget.ConstraintLayout>