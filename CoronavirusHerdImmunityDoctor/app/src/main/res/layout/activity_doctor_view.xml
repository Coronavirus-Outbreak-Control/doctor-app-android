<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_changestatus"
        android:layout_width="230dp"
        android:layout_height="63dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/tv_change_patient_status"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_scan_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/bt_scan_qrcode"
        app:layout_constraintEnd_toEndOf="@+id/tv_changestatus"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/tv_changestatus"
        app:layout_constraintTop_toBottomOf="@+id/tv_changestatus" />

    <View
        android:layout_width="329dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:background="#8BC34A"
        app:layout_constraintBottom_toTopOf="@+id/bt_invite_doc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_scan_qrcode" />

    <Button
        android:id="@+id/bt_invite_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:text="@string/bt_invite_doc"
        app:layout_constraintEnd_toEndOf="@+id/bt_scan_qrcode"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/bt_scan_qrcode"
        app:layout_constraintTop_toBottomOf="@+id/bt_scan_qrcode" />

</androidx.constraintlayout.widget.ConstraintLayout>